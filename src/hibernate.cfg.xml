<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    
  <session-factory>
    <!--Parametros de conexion-->
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost/Tienda</property>
    <property name="connection.username">root</property>
    <property name="connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <!--Pool de conexion y dialecto de la base de datos-->
    <property name="connection.pool_size">1</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <!--Modo de consultas y creacion al cargar la aplicacion-->
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
    <!--Mappeo de entidades (anontaciones)-->
    <mapping class="com.server.modelo.Catalogo"/>
  </session-factory>
</hibernate-configuration>
